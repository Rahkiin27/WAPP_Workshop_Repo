@{
    ViewData["Title"] = "Piechart";
}

<div id="chartContainer"></div>

<script type="text/javascript">
    window.onload = function () {
		var chart = new CanvasJS.Chart("chartContainer", {
			theme: "light2",
			animationEnabled: true,
			title: {
				text: "Piechart"
			},
			data: [
			{
				type: "pie",
				dataPoints: @Html.Raw(ViewBag.DataPoints)
			}
			]
		});
        chart.render();
    };
</script>